NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Deployment Mode - SEPARATE SERVICES
SINGLE_SERVICE=false

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Configuration
JWT_SECRET=change-this-to-secure-random-string-in-production
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-to-secure-password

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# CORS Configuration - VM IP: 3.145.152.128
ALLOWED_ORIGINS=http://3.145.152.128,http://3.145.152.128:80,http://3.145.152.128:3000

# Base URLs (for VM deployment)
