# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ignite

# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Deployment Mode (LOCAL vs PRODUCTION)
# Set to 'true' for Azure App Service (single service mode)
# Leave as 'false' or unset for local development (separate frontend/backend)
SINGLE_SERVICE=false

# CORS - for separate services deployment
# Leave empty for local dev (uses defaults: localhost:3000, localhost:5173)
# For Azure: https://your-app-name.azurewebsites.net
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://winbuild1-theignite-ai-foundry.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Base URLs Configuration
# These are required for email links and redirects
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPassword123

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
